{
  "name": "guacamole-tests",
  "license": "Apache-2.0",
  "workspaces": [
    "modules/*",
    "e2e"
  ],
  "scripts": {
    "commitlint": "commitlint --edit",
    "format": "prettier --write \"modules/**/*.ts\" \"e2e/**/*.ts\"",
    "lint": "eslint modules e2e --fix",
    "lint:ci": "eslint modules e2e --max-warnings=0",
    "build": "npm run build --workspaces --if-present",
    "test:e2e": "playwright test -c ./e2e/playwright.config.ts",
    "test:modules": "jest modules",
    "test": "npm run test:modules; npm run test:e2e",
    "prepare": "husky install .github/hooks",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.8",
    "@types/node": "~20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "typescript": "^5.3.2"
  }
}
